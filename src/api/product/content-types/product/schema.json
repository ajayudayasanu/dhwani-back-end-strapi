{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": "E-commerce products"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "sku": {
            "type": "string"
        },
        "price": {
            "type": "decimal",
            "required": true
        },
        "compareAtPrice": {
            "type": "decimal"
        },
        "priceRange": {
            "type": "json"
        },
        "shortDescription": {
            "type": "text"
        },
        "description": {
            "type": "richtext"
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category"
        },
        "subcategory": {
            "type": "string"
        },
        "tags": {
            "type": "json"
        },
        "images": {
            "type": "component",
            "repeatable": true,
            "component": "product.product-image"
        },
        "videoUrl": {
            "type": "string"
        },
        "hasVariants": {
            "type": "boolean",
            "default": false
        },
        "variants": {
            "type": "component",
            "repeatable": true,
            "component": "product.product-variant"
        },
        "variantType": {
            "type": "string"
        },
        "inStock": {
            "type": "boolean",
            "default": true
        },
        "stockQuantity": {
            "type": "integer"
        },
        "lowStockThreshold": {
            "type": "integer"
        },
        "availabilityStatus": {
            "type": "enumeration",
            "enum": [
                "in_stock",
                "out_of_stock",
                "pre_order",
                "made_to_order"
            ],
            "default": "in_stock"
        },
        "material": {
            "type": "string"
        },
        "weight": {
            "type": "decimal"
        },
        "dimensions": {
            "type": "component",
            "repeatable": false,
            "component": "product.dimensions"
        },
        "isFeatured": {
            "type": "boolean",
            "default": false
        },
        "isNew": {
            "type": "boolean",
            "default": false
        },
        "isBestseller": {
            "type": "boolean",
            "default": false
        },
        "instagramPostUrl": {
            "type": "string"
        },
        "relatedProducts": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::product.product"
        },
        "metaTitle": {
            "type": "string"
        },
        "metaDescription": {
            "type": "text"
        },
        "metaKeywords": {
            "type": "json"
        },
        "careInstructions": {
            "type": "richtext"
        },
        "shippingInfo": {
            "type": "richtext"
        },
        "returnPolicy": {
            "type": "richtext"
        },
        "averageRating": {
            "type": "decimal"
        },
        "reviewCount": {
            "type": "integer"
        }
    }
}